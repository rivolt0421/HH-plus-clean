generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @id @default(autoincrement())
  name String

  registrations Registration[]
}

model Slot {
  id Int @id @default(autoincrement())
  title String
  speaker_name String
  remaining_seats Int
  capacity Int

  registrations Registration[]
}

model Registration {
  id Int @id @default(autoincrement())
  user_id Int
  slot_id Int
  user User @relation(fields: [user_id], references: [id])
  slot Slot @relation(fields: [slot_id], references: [id])
}

